// Jenkinsfile - CORRECTED FOR WINDOWS
pipeline {
    agent any

    tools {
        nodejs 'NodeJS-20'
    }

    stages {

        stage('Checkout Code') {
            steps {
                cleanWs()
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                cache(path: 'node_modules', key: "npm-${hashFiles('package-lock.json')}") {
                    // Use 'bat' for Windows
                    bat 'npm ci'
                }
            }
        }

        stage('Lint Code') {
            steps {
                echo 'Running linter...'
                // Use 'bat' for Windows
                bat 'npm run lint'
            }
        }

        stage('Run Unit Tests') {
            steps {
                echo 'Running unit tests...'
                // Use 'bat' for Windows
                bat 'npm test -- --reporters=default --reporters=jest-junit'
            }
            post {
                always {
                    junit 'junit.xml'
                }
            }
        }

        stage('Build Application') {
            steps {
                echo 'Building TypeScript to JavaScript...'
                // Use 'bat' for Windows
                bat 'npm run build'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo 'Archiving build artifacts...'
                archiveArtifacts artifacts: 'dist/**, package.json, package-lock.json', followSymlinks: false
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
            cleanWs()
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}